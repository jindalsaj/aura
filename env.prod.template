# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values

# Database
POSTGRES_DB=aura_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Security
SECRET_KEY=your-very-secure-secret-key-for-production

# CORS - Update with your production domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Google OAuth - Use your production OAuth credentials
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Plaid - Use production credentials
PLAID_CLIENT_ID=your-production-plaid-client-id
PLAID_SECRET=your-production-plaid-secret
PLAID_ENV=production

# Amplitude
AMPLITUDE_API_KEY=32508d20fbb76ee720aade9a896e02e0

# LLM APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# Frontend
REACT_APP_API_URL=https://api.yourdomain.com

# WhatsApp (optional)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=aura-documents-prod
